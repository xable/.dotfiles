! Special
*.background:    {{ bgc }}
*.foreground:    {{ fgc }}
*.cursorColor:   {{ csc }}

! Black
*.color0:       {{ n_black }}
*.color8:       {{ b_black }}

! Red
*.color1:       {{ n_red }}
*.color9:       {{ b_red }}

! Green
*.color2:       {{ n_green }}
*.color10:      {{ b_green }}

! Yellow
*.color3:       {{ n_yellow }}
*.color11:      {{ b_yellow }}

! Blue
*.color4:       {{ n_blue }}
*.color12:      {{ b_blue }}

! Magenta
*.color5:       {{ n_magenta }}
*.color13:      {{ b_magenta }}

! Cyan
*.color6:       {{ n_cyan }}
*.color14:      {{ b_cyan }}

! White
*.color7:       {{ n_white }}
*.color15:      {{ b_white }}

! XFT
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Font
URxvt*font: {{ font2 }}
URxvt*boldFont:

! General
URxvt*scrollBar: false
URxvt*transparent: false
URxvt*cursorBlink: true
URxvt.letterSpace: -1
URxvt.internalBorder: 10
URxvt*lineSpace: 0
URxvt*termName: rxvt-unicode
URxvt*loginShell: true
URxvt.iso14755: false
URxvt.iso14755_52: false

! Perl
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! Sxiv
Sxiv.background: {{ bgc }}
Sxiv.foreground: {{ n_magenta }}
Sxiv.font: {{ font4 }}

! 2bwm settings
twobwm.border_width: 4
twobwm.outer_border: 4
twobwm.focus_color: {{ wmf }}
twobwm.unfocus_color: {{ wmu }}
twobwm.fixed_color: #ffffff
twobwm.unkill_color: #aaaaaa
twobwm.outer_border_color: #303030
twobwm.fixed_unkill_color: #ffffff
twobwm.inverted_colors: true
twobwm.enable_compton: false
